<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_margin="5dp"
    android:background="@color/colorItemBackgroundNotes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_back_item_notes"
        android:orientation="vertical"
        android:padding="4dp">
    <TextView
        android:id="@+id/tv_itemDemoNotes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/colorItemTextTitleNotes"
        android:text="title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_itemDemoNotes_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:textColor="@color/colorItemTextTextNotes"
        android:text="title"
        android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>