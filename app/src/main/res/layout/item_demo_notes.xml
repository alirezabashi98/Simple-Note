<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_back_item_notes"
        android:orientation="vertical"
        android:padding="6dp">
    <TextView
        android:id="@+id/tv_itemDemoNotes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/colorTextTitleNotes"
        android:text="title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_itemDemoNotes_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:padding="5dp"
        android:textColor="@color/colorTextTextNotes"
        android:text="title"
        android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>